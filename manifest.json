{
    "manifest_version": 2,
    "name": "Linx Bookmark 1.1",
    "description": "Adds the current page to the Linx bookmarking system.",
    "version": "1.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/"
    ],
    "browser_action": {
        "default_title": "Add To Linx",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}